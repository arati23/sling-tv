<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container"
                rel="cq-siteadmin-admin-properties-tabs">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <navigation
                        cq:hideOnEdit="{Boolean}false"
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="ui.navigation.page.tab"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <pageName
                                            cq:hideOnEdit="{Boolean}true"
                                            cq:showOnCreate="{Boolean}true"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="ui.navigation.page.name"
                                            name="pageName"
                                            validation="foundation.jcr.name"/>
                                    <title
                                        cq:hideOnEdit="{Boolean}false"
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="ui.navigation.page.title"
                                        name="./jcr:title"
                                        cq-msm-lockable="jcr:title"
                                        required="{Boolean}true"
                                        useFixedInlineToolbar="{Boolean}true"/>
									<subTitle
                                        cq:hideOnEdit="{Boolean}false"
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Sub Title"
                                        name="./subtitle"                      
                                        useFixedInlineToolbar="{Boolean}true"/>
                                    <link
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldDescription="Provide the Link"
                                        fieldLabel="Link"
                                        cq-msm-lockable="redirectTarget"
                                        name="./redirectTarget"/>
									<windowoption
                                            cq:showOnCreate="{Boolean}true"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            fieldDescription="Select where the Destination URL should be opened"
                                            fieldLabel="Open Link in"
                                            name="./windowSelection"
											defaultValue="_blank">
                                        <items jcr:primaryType="nt:unstructured">
                                            <samewindow
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Same Window"
                                                    value="_self"/>
                                            <newwindow
                                                    jcr:primaryType="nt:unstructured"
                                                    text="New Window"
                                                    value="_blank"/>
                                        </items>
                                    </windowoption>
                                    <imagefile
                                    	cq:showOnCreate="{Boolean}true"
	                                    jcr:primaryType="nt:unstructured"
	                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
	                                    fieldLabel="Image Path"
	                                    name="./imageFile"
	                                    rootPath="/content/dam"/>
                                </items>
                            </column>
                        </items>
                    </navigation>
                    <footer
                        cq:hideOnEdit="{Boolean}false"
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="footer/header"
                        sling:resourceType="granite/ui/components/foundation/section">
						<layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
								    <hideInMobileNav
									    cq:showOnCreate="{Boolean}true"
										cq:hideOnEdit="{Boolean}false"
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
										fieldDescription="Please do not check this option for Mobile Flyout Menu "
										text="Hide in Mobile Nav ?"
										name="./hideInMobileNav"
										checked="false"
                                        uncheckedValue="false"
										value="true"/>
									<hideInDesktopNav
									    cq:showOnCreate="{Boolean}true"
										cq:hideOnEdit="{Boolean}false"
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
										fieldDescription="Please do not check this option for Desktop Flyout Menu "
										text="Hide in Desktop Nav ?"
										name="./hideInDesktopNav"
										checked="false"
                                        uncheckedValue="false"
										value="true"/>	                                    
								</items>
                            </column>
                        </items>
					</footer>	
                    
                    <basic
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <advanced
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <thumbnail
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <cloudservices
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <personalization
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <permissions
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <blueprint
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <livecopy
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <icon
                            cq:hideOnEdit="{Boolean}true"
                            cq:showOnCreate="{Boolean}false"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Icon"
                            sling:resourceType="granite/ui/components/foundation/section"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
