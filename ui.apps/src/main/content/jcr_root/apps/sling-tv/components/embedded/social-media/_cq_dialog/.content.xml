<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Social Media"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Social Media Links Component"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <socialmedia
                        cq:hideOnEdit="{Boolean}false"
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Social Media"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">                                    
                                    <options
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        class="foundation-layout-util-maximized-alt full-width"
                                        composite="{Boolean}true"
										fieldLabel="Social Media Links">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            name="./socialMediaLinks">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <social-media-icons
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Social Media Icon"
                                                            name="./socialMediaIcon">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <facebook
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Facebook"
                                                                    value="fa fa-facebook-official"/>											
                                                                <twitter
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Twitter"
                                                                    value="fa fa-twitter"/>
                                                                <instagram
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Instagram"
                                                                    value="fa fa-instagram"/>
                                                                <linkedin
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Snapchat"
                                                                    value="fa fa-snapchat"/>
                                                                <youtube
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Youtube"
                                                                    value="fa fa-youtube"/>
																<google
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Google+"
                                                                    value="fa fa-google-plus-square"/>
                                                            </items>
                                                        </social-media-icons>
														<socialMediaLink
															jcr:primaryType="nt:unstructured"
															sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
															fieldLabel="Social Media Link"
															name="./socialMediaLink"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </options>
                                </items>
                            </column>
                        </items>
                    </socialmedia>
                </items>
            </tab1>
            <tracking
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Tracking"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <componentId
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    allowBlank="false"
                                    fieldDescription="Please enter the component ID for tracking.Field value should contain alphabets and numbers"
                                    fieldLabel="Component ID"
                                    name="./socialMediaLinksId"/>
                        </items>
                    </columns>
                </items>
            </tracking>
        </items>
    </content>
</jcr:root>
